{
	"info": {
		"_postman_id": "a6f4c87c-08f0-4406-b1b9-0dca19d44dc1",
		"name": "EIS",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.sendRequest({\r",
							"    url: 'https://eis-api-qa.nextdrive.io/auth/login',\r",
							"    method:'POST',\r",
							"    header:{\r",
							"        'accept': 'application/json',\r",
							"        'Content-Type': 'application/json',\r",
							"    },\r",
							"    body: {\r",
							"        mode: 'raw',\r",
							"        raw: JSON.stringify(\r",
							"                            {\r",
							"                                \"username\": \"dustin.lin@nextdrive.io\",\r",
							"                                \"password\": \"link4581\"\r",
							"                            }\r",
							"                            )\r",
							"    }\r",
							"}, function(err, response){\r",
							"    const jsonParse = response.json();\r",
							"    pm.environment.set(\"access_token\", jsonParse.access_token)\r",
							"}\r",
							");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"var body = JSON.parse(responseBody); \r",
							"var content = responseBody;\r",
							"tests[\"Response Body\"+content]= body.length != 0"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"username\": \"{{account}}\",\r\n    \"password\": \"{{password}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{qa_end_point}}/auth/login",
					"host": [
						"{{qa_end_point}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "User_profile",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var body = JSON.parse(responseBody); \r",
							"var content = responseBody;\r",
							"tests[\"Response Body\"+content]= body.length != 0"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{access_token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{qa_end_point}}/auth/profile",
					"host": [
						"{{qa_end_point}}"
					],
					"path": [
						"auth",
						"profile"
					]
				}
			},
			"response": []
		}
	]
}