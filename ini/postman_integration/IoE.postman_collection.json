{
	"info": {
		"_postman_id": "513e54f4-51c8-40ff-a45e-898523d4ceda",
		"name": "IoE",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.sendRequest({\r",
							"    url: 'https://ioe-suite-api-qa.nextdrive.io/auth/login',\r",
							"    method:'POST',\r",
							"    header:{\r",
							"        'accept': '*/*',\r",
							"        'Content-Type': 'application/json',\r",
							"        'user-agent': 'test-agent'\r",
							"    },\r",
							"    body: {\r",
							"        mode: 'raw',\r",
							"        raw: JSON.stringify(\r",
							"                            {\r",
							"                                \"username\": \"benny.hsu+99@nextdrive.io\",\r",
							"                                \"password\": \"link4581\"\r",
							"                            }\r",
							"                            )\r",
							"    }\r",
							"}, function(err, response){\r",
							"    const jsonParse = response.json();\r",
							"    pm.environment.set(\"access_token\", jsonParse.accessToken)\r",
							"}\r",
							");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"var body = JSON.parse(responseBody); \r",
							"var content = responseBody;\r",
							"tests[\"Response Body\"+content]= body.length != 0"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "user-agent",
						"value": "test-agent",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"username\": \"{{account}}\",\r\n  \"password\": \"{{password}}\"\r\n}"
				},
				"url": {
					"raw": "{{qa_end_point}}/auth/login",
					"host": [
						"{{qa_end_point}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get_team_profile",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var body = JSON.parse(responseBody); \r",
							"var content = responseBody;\r",
							"tests[\"Response Body\"+content]= body.length != 0"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{access_token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [
					{
						"key": "",
						"value": "",
						"type": "text",
						"disabled": true
					}
				],
				"url": {
					"raw": "{{qa_end_point}}/manager/team/profile",
					"host": [
						"{{qa_end_point}}"
					],
					"path": [
						"manager",
						"team",
						"profile"
					]
				}
			},
			"response": []
		}
	]
}